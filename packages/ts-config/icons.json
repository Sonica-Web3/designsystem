{
    "extends": "./base.json",
    "compilerOptions": {
      "target": "es6",
      "outDir": "build",
      "lib": ["dom", "ES2015"],
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "module": "ESNext",
      "resolveJsonModule": true,
      "noEmit": true,
      "jsx": "react"
    },
    "exclude": ["node_modules", "build"]
}